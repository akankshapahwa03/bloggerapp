<div>
    <%= form_with(model: [@post, @comment]) do |f| %>
  
      <%= f.hidden_field :parent_id, value: parent_id %>
  
      <div class="form-group">
       
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <div class="mt-2">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    <% end %>
</div>
