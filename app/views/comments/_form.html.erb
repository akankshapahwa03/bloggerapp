
<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <p class="mt-3">
  <% if current_user %>
      <%= form.hidden_field :user_id, value: current_user.id %>
        <% @post.errors.full_messages_for(:user_id).each do |message| %>
        <div class="text-danger p-1"> <%= message %> </div>
      <% end %> 
  </p>

  <p>
    <%= form.label "Comment here: " %><br>
    <%= form.text_field :body, class: 'form-control' %>
        <% @post.errors.full_messages_for(:body).each do |message| %>
        <div class="text-danger p-1"> <%= message %> </div>
        <% end %> 
  </p>
  
  <p>
    <%= form.submit "Add Comment", class: 'btn btn-primary' %>
  </p>
<% end %>
<% end %>