<!-- Display Post Content -->
<h1><%= @post.title %></h1>
<p><%= @post.description %></p>

<%= render 'comments/form' %>
<%= render @comments %>

<div> 
  <p><%= link_to "Edit Blog Post", edit_post_path(@post), class: 'btn btn-primary' %>
  <%= link_to "Delete Blog Post", post_path(@post), data:{
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"}, class: 'btn btn-primary' %></p>
</div>



