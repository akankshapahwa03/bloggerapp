
<div class="container">

<%= form_with(model: @post) do |form| %>

   <div class="mt-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
     <% @post.errors.full_messages_for(:title).each do |message| %>
      <div class="text-danger p-1"> <%= message %> </div>
      <% end %> 
    </div>

   <div class="mt-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
    <% @post.errors.full_messages_for(:description).each do |message| %>
       <div class="text-danger p-1"> <%= message %> </div>
      <% end %> 
    </div>

  <div class="mt-3">
    <%= form.label :category_id %>
    <%= form.select :category_id, options_for_select(@categories.collect { |cat| [cat.name, cat.id]}) %>
  </div>

  <div class="mt-3">
    <%= form.submit "Create Blog", class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
